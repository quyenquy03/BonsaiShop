@using BonsaiShop.Ultilities;
@model IList<BonsaiShop.Models.Product>
<div class="product-list">
	@if(Model.Count > 0)
	{
		foreach(var item in Model)
		{
			var url = Functions.UrlLink(item.ProductName, item.ProductId);
			<div class="product-item ">
				
				<div class="product-image" style="width: 30%">
					<a href="/san-pham/@url"><img src="~/images/@item.ProductImage" style="width: 100%" /></a>
				</div>
				<div class="product-info" style="width: 70%">
					<h4 class="product-name mb-0"><a href="">@item.ProductName</a></h4>
					<div class="price mt-0 text-start">
						<span class="product-new-price">@String.Format("{0:0,0 đ}", item.ProductPrice - item.ProductPrice * item.ProductDisCount / 100)</span>
					</div>
				</div>
			</div>	
		}
	}
</div>