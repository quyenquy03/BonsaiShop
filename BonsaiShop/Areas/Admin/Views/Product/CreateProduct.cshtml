@model BonsaiShop.Models.Product;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h4 class="text-center">Thêm mới sản phẩm</h4>
</div><!-- End Page Title -->

<section class="section mt-4">
    <div class="row mt-3">
        <div class="col-md-1"></div>
        <div class="form-addnew col-md-12 d-flex">
            <form asp-action="CreateProduct" class="row" enctype="multipart/form-data" method="post">
                <div class="col-md-8">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-6 col-sm-12">
                            <label for="inputName5" class="form-label">Tên sản phẩm</label>
                            <input type="text" asp-for="ProductName" placeholder="Nhập tên sản phẩm ..." class="form-control">
                            <span class="text-danger">@TempData["ProductName"]</span>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="inputName5" class="form-label">Thuộc danh mục</label>
                            <select type="text" asp-for="CategoryId" asp-items="@ViewBag.ListCategory" class="form-control">
                                <option value="0"> ------ Chọn danh mục ------</option>
                            </select>
                            <span class="text-danger">@TempData["CategoryId"]</span>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="inputName5" class="form-label">Giá bán</label>
                            <input type="text" asp-for="ProductPrice" placeholder="500.000 đ" class="form-control">
                            <span class="text-danger">@TempData["ProductPrice"]</span>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="inputName5" class="form-label">Giảm giá (%)</label>
                            <input type="text" asp-for="ProductDisCount" placeholder="1%" class="form-control">
                            <span class="text-danger">@TempData["ProductDisCount"]</span>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <label for="inputName5" class="form-label">Thông tin mô tả tóm tắt sản phẩm</label>
                            <textarea type="text" asp-for="ProductDesc" placeholder="Nhập mô tả tóm tắt của sản phẩm ..." class="form-control">
                            </textarea>
                            <span class="text-danger">@TempData["ProductDesc"]</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="avt-box px-4">
                        <input type="file" hidden
                               id="ProductImage"
                               name="ProductImage"
                               asp-for="ProductImage"
                               class="form-control"
                               onchange="document.getElementById('imagePreview').src=window.URL.createObjectURL(this.files[0])" />
                        <label for="ProductImage" style="cursor: pointer"><img id="imagePreview" src="~/images/image-default.png" style="width:100%" /></label>
                        <span class="text-danger">@TempData["ProductImage"]</span>
                    </div>
                </div>
                
                <div class="col-md-12">
                    <label for="inputName5" class="form-label">Thông tin chi tiết</label>
                    <textarea asp-for="ProductDetail" id="CategoryDetail" placeholder="Nhập thông tin chi tiết của sản phẩm..." class="form-control"></textarea>
                    <span class="text-danger">@TempData["ProductDetail"]</span>
                </div>
                <div class="mt-5">
                    <button type="submit" class="btn btn-primary">Thêm mới ngay</button>
                    <a class="btn mx-3 btn-secondary" asp-action="Index" asp-controller="Product" asp-area="Admin">Hủy bỏ</a>
                </div>
            </form>

        </div>
    </div>

</section>
@{
    var CategoryDetail = new BonsaiShop.Areas.Admin.Models.SummerNote("#CategoryDetail");
    <partial name="_SummerNote" model="CategoryDetail" />
}

